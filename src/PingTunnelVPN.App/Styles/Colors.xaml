<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- Dark Theme Color Palette                       -->
    <!-- ============================================== -->

    <!-- Background Hierarchy -->
    <Color x:Key="Color.Background.App">#141729</Color>
    <Color x:Key="Color.Background.Surface">#1e2235</Color>
    <Color x:Key="Color.Background.Elevated">#242838</Color>
    <Color x:Key="Color.Background.Input">#1a1f2e</Color>
    <Color x:Key="Color.Background.Hover">#2a2f42</Color>

    <!-- Primary Colors -->
    <Color x:Key="Color.Primary">#3b82f6</Color>
    <Color x:Key="Color.Primary.Hover">#2563eb</Color>
    <Color x:Key="Color.Primary.Pressed">#1d4ed8</Color>
    <Color x:Key="Color.Primary.Light">#60a5fa</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Color.Success">#22c55e</Color>
    <Color x:Key="Color.Success.Hover">#16a34a</Color>
    <Color x:Key="Color.Success.Background">#0d3320</Color>
    <Color x:Key="Color.Success.Light">#4ade80</Color>

    <Color x:Key="Color.Danger">#ef4444</Color>
    <Color x:Key="Color.Danger.Hover">#dc2626</Color>
    <Color x:Key="Color.Danger.Pressed">#b91c1c</Color>
    <Color x:Key="Color.Danger.Background">#3b1515</Color>

    <Color x:Key="Color.Warning">#f59e0b</Color>
    <Color x:Key="Color.Warning.Background">#3d2a0a</Color>

    <Color x:Key="Color.Info">#6b7280</Color>
    <Color x:Key="Color.Info.Background">#374151</Color>

    <!-- Text Colors -->
    <Color x:Key="Color.Text.Primary">#ffffff</Color>
    <Color x:Key="Color.Text.Secondary">#9ca3af</Color>
    <Color x:Key="Color.Text.Muted">#6b7280</Color>
    <Color x:Key="Color.Text.Disabled">#4b5563</Color>
    <Color x:Key="Color.Text.Inverse">#1e293b</Color>

    <!-- Border Colors -->
    <Color x:Key="Color.Border.Default">#2d3748</Color>
    <Color x:Key="Color.Border.Light">#374151</Color>
    <Color x:Key="Color.Border.Focus">#3b82f6</Color>
    <Color x:Key="Color.Border.Success">#22c55e</Color>
    <Color x:Key="Color.Border.Danger">#ef4444</Color>

    <!-- ============================================== -->
    <!-- Solid Color Brushes                            -->
    <!-- ============================================== -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="Brush.Background.App" Color="{StaticResource Color.Background.App}"/>
    <SolidColorBrush x:Key="Brush.Background.Surface" Color="{StaticResource Color.Background.Surface}"/>
    <SolidColorBrush x:Key="Brush.Background.Elevated" Color="{StaticResource Color.Background.Elevated}"/>
    <SolidColorBrush x:Key="Brush.Background.Input" Color="{StaticResource Color.Background.Input}"/>
    <SolidColorBrush x:Key="Brush.Background.Hover" Color="{StaticResource Color.Background.Hover}"/>

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Primary.Hover" Color="{StaticResource Color.Primary.Hover}"/>
    <SolidColorBrush x:Key="Brush.Primary.Pressed" Color="{StaticResource Color.Primary.Pressed}"/>
    <SolidColorBrush x:Key="Brush.Primary.Light" Color="{StaticResource Color.Primary.Light}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="Brush.Success.Hover" Color="{StaticResource Color.Success.Hover}"/>
    <SolidColorBrush x:Key="Brush.Success.Background" Color="{StaticResource Color.Success.Background}"/>
    <SolidColorBrush x:Key="Brush.Success.Light" Color="{StaticResource Color.Success.Light}"/>

    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="Brush.Danger.Hover" Color="{StaticResource Color.Danger.Hover}"/>
    <SolidColorBrush x:Key="Brush.Danger.Pressed" Color="{StaticResource Color.Danger.Pressed}"/>
    <SolidColorBrush x:Key="Brush.Danger.Background" Color="{StaticResource Color.Danger.Background}"/>

    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="Brush.Warning.Background" Color="{StaticResource Color.Warning.Background}"/>

    <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource Color.Info}"/>
    <SolidColorBrush x:Key="Brush.Info.Background" Color="{StaticResource Color.Info.Background}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Text.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="{StaticResource Color.Text.Muted}"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{StaticResource Color.Text.Disabled}"/>
    <SolidColorBrush x:Key="Brush.Text.Inverse" Color="{StaticResource Color.Text.Inverse}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="Brush.Border.Default" Color="{StaticResource Color.Border.Default}"/>
    <SolidColorBrush x:Key="Brush.Border.Light" Color="{StaticResource Color.Border.Light}"/>
    <SolidColorBrush x:Key="Brush.Border.Focus" Color="{StaticResource Color.Border.Focus}"/>
    <SolidColorBrush x:Key="Brush.Border.Success" Color="{StaticResource Color.Border.Success}"/>
    <SolidColorBrush x:Key="Brush.Border.Danger" Color="{StaticResource Color.Border.Danger}"/>

    <!-- ============================================== -->
    <!-- Spacing Tokens (as Thickness)                  -->
    <!-- ============================================== -->
    <Thickness x:Key="Spacing.XS">4</Thickness>
    <Thickness x:Key="Spacing.S">8</Thickness>
    <Thickness x:Key="Spacing.M">12</Thickness>
    <Thickness x:Key="Spacing.L">16</Thickness>
    <Thickness x:Key="Spacing.XL">20</Thickness>
    <Thickness x:Key="Spacing.XXL">24</Thickness>

    <!-- ============================================== -->
    <!-- Corner Radius Tokens                           -->
    <!-- ============================================== -->
    <CornerRadius x:Key="Radius.S">6</CornerRadius>
    <CornerRadius x:Key="Radius.M">8</CornerRadius>
    <CornerRadius x:Key="Radius.L">12</CornerRadius>
    <CornerRadius x:Key="Radius.XL">16</CornerRadius>
    <CornerRadius x:Key="Radius.Full">999</CornerRadius>

    <!-- ============================================== -->
    <!-- Legacy Compatibility (for existing code)       -->
    <!-- ============================================== -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Color.Background.App}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Color.Background.Surface}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource Color.Primary.Hover}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Color.Border.Default}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Color.Text.Primary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Color.Text.Secondary}"/>

</ResourceDictionary>
